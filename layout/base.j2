<!doctype html>
<!--[if lt IE 7]> <html class="no-js ie6 oldie" lang="en"> <![endif]-->
<!--[if IE 7]>    <html class="no-js ie7 oldie" lang="en"> <![endif]-->
<!--[if IE 8]>    <html class="no-js ie8 oldie" lang="en"> <![endif]-->
<!--[if gt IE 8]><!--> <html class="no-js" lang="en"> <!--<![endif]-->
<head>
  {% block starthead %}{% endblock starthead %}
  <meta charset="{{ resource.meta.charset }}">

  <!-- Always force latest IE rendering engine (even in intranet) & Chrome Frame
       Remove this if you use the .htaccess -->
  <meta http-equiv="X-UA-Compatible" content="{{ resource.meta.compatibility }}">

  <!-- encoding must be specified within the first 512 bytes
        www.whatwg.org/specs/web-apps/current-work/multipage/semantics.html#charset -->

  <!-- meta element for compatibility mode needs to be before
        all elements except title & meta
        msdn.microsoft.com/en-us/library/cc288325(VS.85).aspx -->
  <!-- Chrome Frame is only invoked if meta element for
        compatibility mode is within the first 1K bytes
        code.google.com/p/chromium/issues/detail?id=23003 -->

  <title>{% block title %}{{ resource.meta.title }}{% endblock %}</title>
  <meta name="description" content="{{ resource.meta.description }}">
  <meta name="author" content="{{ resource.meta.author }}">

  <!--  Mobile viewport optimized: j.mp/bplateviewport -->
  <meta name="viewport" content="{{ resource.meta.viewport }}">

  {% block css %}
  <link rel="stylesheet" href="{{ media_url('css/style.css?v=2') }}">
  <link rel="stylesheet" href="{{ media_url('css/style-adjustments.css') }}">
  <link rel="stylesheet" href="{{ media_url('css/autumn.css') }}">
  {% endblock css %}

  {% block headjs %}
    <script src="{{ media_url('js/libs/modernizr-2.0.6.min.js') }}"></script>
  {% endblock headjs %}
  {% block endhead %}{% endblock endhead %}
</head>
<body id="{{ resource.meta.id if resource.meta.id else resource.slug }}">
  {% block content %}
  <div id="container">
      {% block container %}
      <div id="main" role="main">
          <aside>
            <div id="sidebar-top">
              <div id="sidebar-top-right"></div>
            </div><!-- close #sidebar-top -->

            <div id="sidebar-container-bg-left">
              <div id="sidebar-container-bg-right">
                <div id="sidebar-container">
              <header>
              {% block header -%}
                  <h1 class="page-title"><a class="title" href="/" title="makewhatis&amp;" >
                  makewhatis&amp;</a></h1>
              {%- endblock %}                
                </header>
          {% block nav %}
          {% from "macros.j2" import render_nav with context %}
          {{ render_nav(menu, ['sf-menu', 'sf-vertical']) }}
          {% endblock %}                
                
                <!-- <hr /> DIVIDER -->
                
                <div class="content-padding">
                  <h2 class="twitter-heading">Latest Tweets</h2>
                  <div id="tweets-sidebar"><div class="clearfix"></div></div>
                  <a href="http://twitter.com/makewhatis/" target="_blank" class="button">Follow on Twitter</a>
                </div>
                
                
                <!--hr />
                <div class="content-padding">
                  <h2 class="flickr-heading">Flickr Photos</h2>
                  <div id="flickr-sidebar"></div>
                  <div class="clearfix"></div>
                </div--><!-- close .content-padding -->
                <div class="content-padding">
                                        {% block sidebar %}
              {% include "sidebar.j2" %}
            {% endblock sidebar %}
</div>
                <div class="clearfix"></div>
                </div><!-- close #sidebar-container -->
              </div><!-- close #sidebar-container-bg-right" -->
            </div><!-- close #sidebar-container-bg-left -->

            <div id="sidebar-bottom">
              <div id="sidebar-bottom-right"></div>

            </div><!-- close #sidebar-bottom -->
        </aside><!-- SIDEBAR CLOSED -->


        <div id="content">
          <div id="content-top">
            <div id="content-top-right"></div>
          </div><!-- close #content-top -->
              
          <div id="content-container-bg-left">
            <div id="content-container-bg-right">
              <div id="content-container">
                  {% block main %}
                  {% endblock main %}                              
              <div class="clearfix"></div>
            </div><!-- close #content-container -->
          </div><!-- close #content-container-bg-right" -->
        </div><!-- close #content-container-bg-left -->


          <div id="content-bottom">
            <div id="content-bottom-right"></div>
          </div><!-- close #content-bottom -->
        </div><!-- close #content -->
      </div>
        {% endblock container %}
      <!-- end main --> 
    </div>
  </div>
  {% endblock content%}
  {% block jquery %}
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.6.2/jquery.js"></script>
  <script>window.jQuery || document.write("<script src='{{ media_url('js/libs/jquery-1.6.2.min.js') }}'>\x3C/script>")</script>
  {% endblock jquery %}
  {% block js %}
  <!-- Grab Google CDN's jQuery, with a protocol relative URL; fall back to local if necessary -->

  <script src="http://maps.google.com/maps/api/js?sensor=true" type="text/javascript"></script>
  <script src="{{ media_url('js/plugins.js') }}"></script>
  <script src="{{ media_url('js/script.js') }}"></script>
  <!-- end scripts-->


  {% block scripts %}
  {% endblock scripts %}


  <!--[if lt IE 7 ]>
    <script src="js/libs/dd_belatedpng.js"></script>
    <script>DD_belatedPNG.fix('img, .png_bg'); // Fix any <img> or .png_bg bg-images. Also, please read goo.gl/mZiyb </script>
  <![endif]-->

  {% block analytics %}
  {% include "analytics.j2" %}
  {% endblock analytics %}

  {% endblock js %}
</body>
</html>